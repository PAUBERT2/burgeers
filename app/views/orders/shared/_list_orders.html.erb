<table>
  <thead>
    <tr>
      <td>🍔 Burger Name :</td>
      <td>Quantity :</td>
      <td>💶 Total price : </td>
      <td>🚁 Delivered :</td>
      <td>😃 Ordered by :</td>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>


        <!-- ADD BUTTON CHECKBOX -->
        <td><%= link_to order.burger.name, burger_path(order.burger) %>

        <%= simple_form_for order do |f| %>
          <% if order.errors.any? %>
            <div class="errors-container">
              <ul>
                <% @order.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= f.submit class: "btn-push" %>

        <% end %>







        </td>
        <td><%= order.quantity %> burgers</td>
        <td><%= order.total_price %> €</td>
        <td><%= order.delivered ? "👍 Livré" : "🚀 En cours de livraison" %></td>
        <td><%= order.user.first_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
