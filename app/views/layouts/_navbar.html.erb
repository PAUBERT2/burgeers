<div class="row">
  <div class="navbar-wagon">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "burgerlogo.png", class: "btn-home", height: 80 %>
      <%= image_tag "logo.png", height: 50 %>
    <% end %>
    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <%= link_to "Add a burger", new_burger_path, method: :get, class: "btn-burgeers" %>
      <% if user_signed_in? %>

        <!-- Links when logged in -->


        <!-- Avatar with dropdown menu -->
        <div class="navbar-wagon-item">
          <div class="dropdown">
            <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id:"navbar-wagon-menu", "data-toggle".to_sym => "dropdown"  %>

            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to admin_burgers_path do %>
                  <i class="fas fa-utensils"></i> <%= t(".profile", default: "My cooked burgeers") %>
                <% end %>
              </li>
              <li>
                <%= link_to orders_path() do %>
                  <i class="fas fa-shopping-basket"></i>  <%= t(".settings", default: "My ordered burgeers") %>
                <% end %>
              </li>
              <li>
                <%= link_to mine_orders_path() do %>
                  <i class="fa fa-cog"></i>  <%= t(".settings", default: "My clients orders ") %>
                <% end %>
              </li>

              <li>
                <%= link_to edit_user_registration_path do %>
                  <i class="fas fa-edit"></i></i>  <%= t(".sign_out", default: "Edit my profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path(), method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>

            </ul>
          </div>
        </div>
      <% else %>
        <!-- Login link (when logged out) -->
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
    </div>
  </div>
</div>
