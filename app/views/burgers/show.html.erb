<div class="row white-backgroud" >
  <div class = "menu-show">
    <!-- GOING BACK TO THE BURGER LIST -->
    <%= link_to "Back to the list", root_path(), {class: "btn-burgeers"} %>
    <% if policy(@burger).destroy? %>
      <%= link_to "Delete", burger_path(@burger), method: :delete, class: "btn-burgeers" %>
    <% end %>
    <% if policy(@burger).edit? %>
      <%= link_to "Update your burger", edit_burger_path(@burger), class: "btn-burgeers" %>
    <% end %>
    <% if @burger.quantity_max != 0 %>
      <%= link_to "Order !", new_burger_order_path(@burger), {class: "btn-push"} %>
    <% end %>
  </div>
</div>

<div class="row white-backgroud">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <% if @burger.quantity_max != 0 %>
       <%= render 'orders/new', burger: @burger %>
     <% end %>
   </div>
</div>


<div class="row background-card">
  <div class="col-xs-12 col-sm-6">
    <% if !@burger[:photo].nil? %>
      <div class = "burger-photo"> <%= cl_image_tag @burger.photo, height: 300, width: 400, crop: :fill %></div>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-6">
    <div class="row">
      <h1> 🍔 <%= @burger.name.capitalize %></h1>
    </div>
    <div class="row">
      <p> 🍴 Cooker : <%= @burger.user.last_name %> <%= @burger.user.first_name %></p>
    </div>
    <div class="row">
      <p> 💲 Price : <%= @burger.price %></p>
    </div>
    <div class="row">
      <p> 📝 Description : <%= @burger.description %></p>
    </div>
    <div class="row">
      <p> 📦 Stock : <%= @burger.quantity_max %></p>
    </div>
    <div class="row">
      <p> 📆 Opening days : <%= @burger.opening_days %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class = "margin-map"
    id="map"
    style="width: 100%; height: 30vh;"
    data-markers="<%= @markers.to_json %>">
  </div>
</div>



