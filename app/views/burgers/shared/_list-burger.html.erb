<div class="row">
  <% @burgers.each do |burger| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to burger_path(burger) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path burger.photo { |n|  } %>)">
          <div class="card-category"> <%= burger.name %></div>
          <div class="card-description"> <%= burger.description %></div>
          <div class="card-price"><%=burger.price %>$   </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
